{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@models/*": ["./src/models/*"],
      "@models": ["./src/models"],
      "@components": ["./src/components"],
      "@pages": ["./src/pages"],
      "@layouts": ["./src/layouts"],
      "@plugins": ["./src/plugins"],
      "@services": ["./src/services"],
      "@utils": ["./src/utils"],
      "@validations": ["./src/utils/constants/validation.ts"],
      "@styles/*": ["./src/styles/*"],
      "@hooks": ["./src/hooks"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
